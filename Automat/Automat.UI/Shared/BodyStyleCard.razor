@using Automat.Lib.Database.Model
@using Automat.Lib.Database.Model
@using Automat.UI.Services
@inject AutomatService _AutomatService
<div class="col-3 mb-3">
    <div class="card text-center justify-content-center p-3">
        <img src="@CurrentBodyStyle.IconUrl" class="card-img-top center-block mb-3" style="width: 50%" alt="...">
        <div class="card-body p-0">
            <h5 class="card-title mb-3">@CurrentBodyStyle.Name</h5>
            <input type="checkbox" class="btn-check" id="@CurrentBodyStyle.BodyStyleId-karosserie" autocomplete="off" @bind="Selected" @onclick="Toggle">
            <label class="btn btn-outline-secondary" for="@CurrentBodyStyle.BodyStyleId-karosserie">@ButtonText</label><br>
        </div>
    </div>
</div>

@code {
    [Parameter]  
    public BodyStyle CurrentBodyStyle { get; set; } 
    
    private string ButtonText = "Select";
    private bool Selected = false;
    
    protected override void OnInitialized()
    {
        if (_AutomatService.getAutomat().GetFavoritesDisplay().GetUserBodyStyles().Contains(CurrentBodyStyle))
        {
            Selected = true;
            ButtonText = "Selected";
        }
    }

    private void Toggle()
    {
        Selected = !Selected;
        if (Selected)
        {
            _AutomatService.getAutomat().GetFavoritesDisplay().AddUserBodyStyle(CurrentBodyStyle);
            ButtonText = "Selected";
        }
        else
        {
            _AutomatService.getAutomat().GetFavoritesDisplay().RemoveUserBodyStyle(CurrentBodyStyle);
            ButtonText = "Select";
        }
    }
}