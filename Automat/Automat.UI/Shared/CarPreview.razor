@using Automat.Lib.Database.Model
<div class="col-4 mb-3">
    <div class="card text-center justify-content-center">
        <img src="@CurrentModel.ThumbnailUrl" class="card-img-top" style="width: 100%" alt="...">
        <div class="card-body p-3">
            <h5 class="card-title mb-0 overflow-hidden" style="line-height: 24px; overflow: hidden; height: 24px">@CurrentModel.Name</h5>
            <p class="text-success mt-0 mb-2">@Rating% match</p>
            <a href="/Details/@CurrentModel.ModelId" class="btn btn-primary">Details</a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Model CurrentModel { get; set; } 
    [Parameter]
    public int Rating { get; set; } 
}